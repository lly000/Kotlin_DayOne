<?xml version="1.0" encoding="utf-8"?>
<com.example.kotlin_dayone.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <com.example.kotlin_dayone.view.SquareImageView
        android:id="@+id/imgeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_jia" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_del" />
</com.example.kotlin_dayone.view.SquareFrameLayout>